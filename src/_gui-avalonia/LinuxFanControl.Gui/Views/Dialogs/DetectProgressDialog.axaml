<?xml version="1.0" encoding="utf-8"?>
<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="LinuxFanControl.Gui.Views.Dialogs.DetectProgressDialog"
    Width="780" Height="520"
    CanResize="True"
    WindowStartupLocation="CenterOwner"
    Title="Auto-Setup: Detect &amp; Calibrate">

  <DockPanel Margin="12">
    <!-- Bottom buttons -->
    <StackPanel DockPanel.Dock="Bottom"
                Orientation="Horizontal"
                Spacing="8"
                HorizontalAlignment="Right">
      <Button x:Name="BtnCancel" Width="120" Content="Cancel"/>
      <Button x:Name="BtnClose"  Width="120" Content="Close" IsVisible="False"/>
    </StackPanel>

    <!-- Content -->
    <StackPanel Orientation="Vertical" Spacing="8">
      <TextBlock x:Name="LblStatus" Text="Startingâ€¦" />
      <ProgressBar x:Name="Bar" Height="8" IsIndeterminate="True"/>

      <Border Background="#1E1E1E" Padding="8" CornerRadius="4">
        <ScrollViewer>
          <TextBlock x:Name="LogView" TextWrapping="Wrap"/>
        </ScrollViewer>
      </Border>
    </StackPanel>
  </DockPanel>
</Window>
