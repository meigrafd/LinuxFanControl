<Window
    x:Class="LinuxFanControl.Gui.Views.Dialogs.ImportDialog"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="600" Height="200"
    Title="Import FanControl Config">
  <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="*,Auto" Margin="12">
    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Select config.json to import" FontSize="16" FontWeight="SemiBold"/>
    <TextBox Grid.Row="1" Grid.Column="0" Margin="0,8,8,0" Text="{Binding SelectedPath}"/>
    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
      <Button Content="Browseâ€¦" Click="OnBrowseClicked"/>
      <Button Content="Close" Click="OnCloseClicked"/>
    </StackPanel>
    <TextBlock Grid.Row="2" Grid.ColumnSpan="2" Margin="0,8,0,0" Text="{Binding Status}"/>
  </Grid>
</Window>
