<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>

    <OutputType>WinExe</OutputType>
    <UseWPF>false</UseWPF>
    <UseWindowsForms>false</UseWindowsForms>
    <AvaloniaUseCompiledBindingsByDefault>true</AvaloniaUseCompiledBindingsByDefault>
    <AvaloniaCompileXaml>true</AvaloniaCompileXaml>
    <PublishSingleFile>false</PublishSingleFile>
    <EnableDefaultCompileItems>true</EnableDefaultCompileItems>
    <EnableDefaultItems>true</EnableDefaultItems>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="11.2.0" />
    <PackageReference Include="Avalonia.Desktop" Version="11.2.0" />
    <PackageReference Include="Avalonia.ReactiveUI" Version="11.2.0" />
    <PackageReference Include="Avalonia.Fonts.Inter" Version="11.2.0" />
    <PackageReference Include="LiveChartsCore.SkiaSharpView.Avalonia" Version="2.0.0-rc3" />
  </ItemGroup>

  <!-- explizit alle XAML-Dateien, keine Wildcards für Code nötig -->
  <ItemGroup>
    <AvaloniaXaml Include="App.axaml" />
    <AvaloniaXaml Include="Views/MainWindow.axaml" />
    <AvaloniaXaml Include="Views/DashboardView.axaml" />
    <AvaloniaXaml Include="Views/Controls/FanTile.axaml" />
    <AvaloniaXaml Include="Views/Dialogs/SetupDialog.axaml" />
    <AvaloniaXaml Include="Views/Dialogs/DetectProgressDialog.axaml" />
  </ItemGroup>

  <!-- Themes / Locales dynamisch einlesen, aber als Content ins Build ausliefern -->
  <ItemGroup>
    <Content Include="Themes/*.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Locales/*.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
  </ItemGroup>

</Project>
