<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <OutputType>WinExe</OutputType>
    <RootNamespace>LinuxFanControl.Gui</RootNamespace>
    <UseWPF>false</UseWPF>
    <UseWindowsForms>false</UseWindowsForms>
  </PropertyGroup>

  <ItemGroup>
    <!-- Avalonia NuGet -->
    <PackageReference Include="Avalonia" Version="11.0.0-rc3" />
    <PackageReference Include="Avalonia.Desktop" Version="11.0.0-rc3" />
    <PackageReference Include="Avalonia.ReactiveUI" Version="11.0.0-rc3" />
  </ItemGroup>

  <ItemGroup>
    <!-- Source files -->
    <Compile Include="Program.cs" />
    <Compile Include="App.xaml.cs" />
    <Compile Include="MainWindow.xaml.cs" />
    <Compile Include="AssetLocator.cs" />

    <!-- XAML pages -->
    <Page Include="App.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>
    <Page Include="MainWindow.xaml">
      <Generator>MSBuild:Compile</Generator>
      <SubType>Designer</SubType>
    </Page>

    <!-- Dynamic Assets: kopieren zur Ausgabe -->
    <None Include="Locales/*.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
    <None Include="Themes/*.json">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </None>
  </ItemGroup>

</Project>
