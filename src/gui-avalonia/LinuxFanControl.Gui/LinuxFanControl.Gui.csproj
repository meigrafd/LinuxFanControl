<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <!-- keep compiled bindings off until all x:DataType are wired -->
    <AvaloniaUseCompiledBindingsByDefault>false</AvaloniaUseCompiledBindingsByDefault>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Avalonia" Version="11.2.0" />
    <PackageReference Include="Avalonia.Desktop" Version="11.2.0" />
    <PackageReference Include="Avalonia.Themes.Fluent" Version="11.2.0" />
    <PackageReference Include="Avalonia.Controls.DataGrid" Version="11.2.0" />
    <PackageReference Include="CommunityToolkit.Mvvm" Version="8.2.2" />
    <PackageReference Include="LiveChartsCore" Version="2.0.0-rc3" />
    <PackageReference Include="LiveChartsCore.SkiaSharpView" Version="2.0.0-rc3" />
    <PackageReference Include="LiveChartsCore.SkiaSharpView.Avalonia" Version="2.0.0-rc3" />
    <PackageReference Include="SkiaSharp" Version="2.88.8" />
  </ItemGroup>

  <!-- Wichtig: KEINE Wildcards. Nur diese Dateien werden als AvaloniaXaml eingebunden. -->
  <ItemGroup>
    <AvaloniaXaml Include="App.axaml" />
    <AvaloniaXaml Include="Views/Controls/FanTile.axaml" />
    <AvaloniaXaml Include="Views/DashboardView.axaml" />
    <AvaloniaXaml Include="Views/Dialogs/ImportDialog.axaml" />
    <AvaloniaXaml Include="Views/Dialogs/SetupDialog.axaml" />
    <AvaloniaXaml Include="Views/Editors/CurveEditorView.axaml" />
    <AvaloniaXaml Include="Views/MainWindow.axaml" />
  </ItemGroup>

  <!-- Sicherheitshalber: falls irgendwo anderweitig XAML hinzugefügt wurde, nimm es raus -->
  <ItemGroup>
    <AvaloniaXaml Remove="bin/**" />
    <AvaloniaXaml Remove="obj/**" />
    <!-- entferne versehentliche Duplikate (nur falls vorhanden) -->
    <AvaloniaXaml Remove="**/*.axaml" Condition="'@(AvaloniaXaml)' != ''" />
    <!-- und füge danach explizit (oben) wieder hinzu -->
  </ItemGroup>
</Project>
