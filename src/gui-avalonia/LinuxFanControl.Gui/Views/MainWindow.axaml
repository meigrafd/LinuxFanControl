<Window
  x:Class="LinuxFanControl.Gui.Views.MainWindow"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:views="clr-namespace:LinuxFanControl.Gui.Views"
  Width="1280" Height="800"
  Title="Linux Fan Control">
  <DockPanel>
    <!-- Top bar -->
    <Grid DockPanel.Dock="Top" ColumnDefinitions="*,Auto,Auto,Auto" Padding="8" Background="#0B1220">
      <TextBlock Text="Linux Fan Control" VerticalAlignment="Center" FontSize="16" FontWeight="SemiBold"/>
      <ComboBox Grid.Column="1" Width="180" Margin="8,0,0,0"
        Items="{Binding AvailableLanguages}" SelectedItem="{Binding CurrentLanguage}">
        <ComboBox.ItemTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding}"/>
          </DataTemplate>
        </ComboBox.ItemTemplate>
      </ComboBox>
      <ComboBox Grid.Column="2" Width="180" Margin="8,0,0,0"
        Items="{Binding AvailableThemes}" SelectedItem="{Binding CurrentTheme}">
        <ComboBox.ItemTemplate>
          <DataTemplate>
            <TextBlock Text="{Binding}"/>
          </DataTemplate>
        </ComboBox.ItemTemplate>
      </ComboBox>
      <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="8">
        <Button Content="Setup" Command="{Binding OpenSetupAsyncCommand}" CommandParameter="{Binding $parent[Window]}"/>
        <Button Content="Import" Command="{Binding OpenImportAsyncCommand}" CommandParameter="{Binding $parent[Window]}"/>
      </StackPanel>
    </Grid>

    <!-- Dashboard -->
    <views:DashboardView/>
  </DockPanel>
</Window>
