<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:LinuxFanControl.Gui.Views"
        x:Class="LinuxFanControl.Gui.Views.MainWindow"
        Width="1200" Height="800"
        Background="{DynamicResource Lfc.WindowBg}"
        Title="{Binding Title}">
  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Top bar -->
    <DockPanel Grid.Row="0" Margin="8">
      <TextBlock Text="{Binding Title}" Foreground="{DynamicResource Lfc.TextPrimary}" FontSize="20" VerticalAlignment="Center"/>
      <StackPanel Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right" DockPanel.Dock="Right">
        <Button x:Name="BtnSetup" Content="Setup" />
      </StackPanel>
    </DockPanel>

    <!-- Dashboard -->
    <views:DashboardView Grid.Row="1"/>
  </Grid>
</Window>
