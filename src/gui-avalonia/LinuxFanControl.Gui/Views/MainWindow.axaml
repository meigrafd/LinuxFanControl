<Window
  x:Class="LinuxFanControl.Gui.Views.MainWindow"
  xmlns="https://github.com/avaloniaui"
  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
  xmlns:views="clr-namespace:LinuxFanControl.Gui.Views"
  Title="Linux Fan Control"
  Width="1200" Height="800"
  Background="#0E1A2A">
  <Grid RowDefinitions="Auto,*" Margin="0">
    <!-- Top bar -->
    <Border Background="#0B1522" Padding="10,8" BorderBrush="#0B1522" BorderThickness="0" >
      <Grid ColumnDefinitions="*,Auto,Auto,Auto" VerticalAlignment="Center">
        <TextBlock Text="Linux Fan Control" Foreground="#E6F0FF" FontSize="16" FontWeight="SemiBold" />
        <ComboBox Grid.Column="1" Margin="12,0,0,0" Width="220"
          Items="{Binding Profiles}" SelectedItem="{Binding SelectedProfile}"
          PlaceholderText="Profile" />
        <ComboBox Grid.Column="2" Margin="8,0,0,0" Width="180"
          Items="{Binding Languages}" SelectedItem="{Binding SelectedLanguage}"
          PlaceholderText="Language" />
        <StackPanel Grid.Column="3" Orientation="Horizontal" Spacing="8" Margin="12,0,0,0">
          <Button Content="Setup" Command="{Binding SetupCommand}" />
          <Button Content="Import" Command="{Binding ImportCommand}" />
        </StackPanel>
      </Grid>
    </Border>

    <!-- Main content -->
    <views:DashboardView Grid.Row="1" DataContext="{Binding Dashboard}" />
  </Grid>
</Window>
