<UserControl
    x:Class="LinuxFanControl.Gui.Views.Controls.FanTile"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.Avalonia;assembly=LiveChartsCore.SkiaSharpView.Avalonia">
  <Border Padding="8" CornerRadius="8" Background="#1F2430">
    <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,*,Auto">
      <!-- Title -->
      <TextBlock Grid.Row="0" Grid.ColumnSpan="2"
                 Text="{Binding Title}" FontWeight="SemiBold" FontSize="14" />

      <!-- Metrics -->
      <StackPanel Grid.Row="1" Orientation="Horizontal" Spacing="12">
        <TextBlock Text="RPM:"/>
        <TextBlock Text="{Binding Rpm}"/>
        <TextBlock Text="PWM:" Margin="16,0,0,0"/>
        <TextBlock Text="{Binding PwmDuty}"/>
        <TextBlock Text="Temp:" Margin="16,0,0,0"/>
        <TextBlock Text="{Binding Temperature}"/>
      </StackPanel>

      <!-- Chart (ohne explizite Achsen; vermeidet Axis-Resolver-Fehler) -->
      <lvc:CartesianChart Grid.Row="2" Height="120" Margin="0,6,0,0"
                          Series="{Binding Series}" />

      <!-- Actions -->
      <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
        <Button Content="Edit" Command="{Binding EditCommand}"/>
        <Button Content="Remove" Command="{Binding RemoveCommand}"/>
      </StackPanel>
    </Grid>
  </Border>
</UserControl>
