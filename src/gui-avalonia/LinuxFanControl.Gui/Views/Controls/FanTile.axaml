<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="LinuxFanControl.Gui.Views.Controls.FanTile"
             MinWidth="260" MinHeight="140" Margin="8" Padding="12"
             Background="{DynamicResource Lfc.CardBg}">
  <Border CornerRadius="12" Background="{DynamicResource Lfc.CardBg}" Padding="12">
    <Grid RowDefinitions="Auto,Auto,Auto" ColumnDefinitions="Auto,*">
      <views:Controls.FanLogo Grid.Row="0" Grid.Column="0" Width="28" Height="28" Margin="0,0,8,0"/>
      <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Name}" 
                 Foreground="{DynamicResource Lfc.TextPrimary}" FontSize="16"/>

      <TextBlock Grid.Row="1" Grid.ColumnSpan="2"
                 Text="{Binding Rpm, StringFormat='RPM: {0:0}'}"
                 Foreground="{DynamicResource Lfc.TextSecondary}" Margin="0,6,0,0"/>

      <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" Spacing="8" Margin="0,8,0,0">
        <TextBlock Text="Duty" Foreground="{DynamicResource Lfc.TextSecondary}" VerticalAlignment="Center"/>
        <Slider Width="160" Minimum="0" Maximum="100" Value="{Binding Duty}"/>
        <TextBlock Text="{Binding Duty, StringFormat='{0:0}%'}" Foreground="{DynamicResource Lfc.TextPrimary}"/>
      </StackPanel>
    </Grid>
  </Border>
</UserControl>
