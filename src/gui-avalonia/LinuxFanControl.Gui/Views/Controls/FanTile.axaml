<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="LinuxFanControl.Gui.Views.Controls.FanTile"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:LinuxFanControl.Gui.Views.Controls">

  <!--
    Fan tile used on the dashboard.
    Shows logo, name, sensor hint, RPM and current duty as a bar.
    Keep it lean to avoid LiveCharts dependency until charts are wired.
  -->

  <Border Classes="fan-tile" CornerRadius="8" Padding="10" Margin="6">
    <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="8" RowSpacing="6">

      <!-- animated logo (our own control) -->
      <views:FanLogo Grid.RowSpan="2" Width="28" Height="28" />

      <!-- title + sensor -->
      <StackPanel Grid.Column="1" Orientation="Vertical" Spacing="2">
        <TextBlock Classes="tile-title"
                   Text="{Binding Name}"
                   FontWeight="SemiBold"
                   FontSize="14"/>
        <TextBlock Classes="tile-subtitle"
                   Text="{Binding SensorDisplay}"
                   Opacity="0.8"
                   FontSize="12"/>
      </StackPanel>

      <!-- right side: RPM -->
      <TextBlock Grid.Column="2"
                 Text="{Binding RpmDisplay}"
                 HorizontalAlignment="Right"
                 VerticalAlignment="Top"
                 FontWeight="SemiBold"
                 FontSize="13"/>

      <!-- duty bar -->
      <ProgressBar Grid.Row="1" Grid.ColumnSpan="3"
                   Minimum="0" Maximum="100"
                   Value="{Binding Duty}"
                   Height="6"/>
    </Grid>
  </Border>
</UserControl>
