<UserControl
    x:Class="LinuxFanControl.Gui.Views.Controls.FanLogo"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <Viewbox Stretch="Uniform">
    <Grid Width="24" Height="24"
          RenderTransformOrigin="0.5,0.5">
      <Grid.RenderTransform>
        <RotateTransform Angle="0"/>
      </Grid.RenderTransform>
      <Grid.Animations>
        <Animation Duration="0:0:1.2" RepeatCount="Forever">
          <KeyFrame Cue="0%">
            <Setter Property="RenderTransform.(RotateTransform.Angle)" Value="0"/>
          </KeyFrame>
          <KeyFrame Cue="100%">
            <Setter Property="RenderTransform.(RotateTransform.Angle)" Value="360"/>
          </KeyFrame>
        </Animation>
      </Grid.Animations>

      <!-- three blades -->
      <Canvas Width="24" Height="24">
        <Path Fill="#8EC8FF" Data="M12,2 L13,9 L11,9 Z" Opacity="0.85"/>
        <Path Fill="#8EC8FF" Data="M22,12 L15,13 L15,11 Z" Opacity="0.85"/>
        <Path Fill="#8EC8FF" Data="M12,22 L13,15 L11,15 Z" Opacity="0.85"/>
        <!-- hub -->
        <Ellipse Fill="#E6F0FF" Width="4" Height="4" Canvas.Left="10" Canvas.Top="10"/>
      </Canvas>
    </Grid>
  </Viewbox>
</UserControl>
