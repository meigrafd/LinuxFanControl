<UserControl
    x:Class="LinuxFanControl.Gui.Views.Controls.FanLogo"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

  <Viewbox Stretch="Uniform">
    <!-- Rotating canvas (rotation driven in code-behind) -->
    <Canvas x:Name="Rotor"
            Width="24" Height="24"
            RenderTransformOrigin="0.5,0.5">
      <Canvas.RenderTransform>
        <RotateTransform Angle="0"/>
      </Canvas.RenderTransform>

      <!-- three blades -->
      <Path Fill="#8EC8FF" Data="M12,2 L13,9 L11,9 Z" Opacity="0.85"/>
      <Path Fill="#8EC8FF" Data="M22,12 L15,13 L15,11 Z" Opacity="0.85"/>
      <Path Fill="#8EC8FF" Data="M12,22 L13,15 L11,15 Z" Opacity="0.85"/>

      <!-- hub -->
      <Ellipse Fill="#E6F0FF" Width="4" Height="4" Canvas.Left="10" Canvas.Top="10"/>
    </Canvas>
  </Viewbox>
</UserControl>
