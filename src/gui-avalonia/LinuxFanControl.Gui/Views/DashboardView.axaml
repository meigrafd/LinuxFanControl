<UserControl
    x:Class="LinuxFanControl.Gui.Views.DashboardView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:LinuxFanControl.Gui.Views.Controls">
  <Grid RowDefinitions="Auto,*,Auto" Margin="12">
    <!-- Section header -->
    <TextBlock Grid.Row="0" Text="Dashboard" Foreground="#E6F0FF"
               FontSize="14" FontWeight="SemiBold" Margin="0,4,0,8"/>

    <!-- Tiles -->
    <Grid Grid.Row="1">
      <!-- List -->
      <ItemsControl ItemsSource="{Binding FanTiles}" IsVisible="{Binding HasTiles}">
        <ItemsControl.ItemsPanel>
          <ItemsPanelTemplate>
            <WrapPanel Orientation="Horizontal" ItemWidth="320" ItemHeight="180" />
          </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <controls:FanTile DataContext="{Binding}" Margin="8"/>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>

      <!-- Placeholder when empty -->
      <TextBlock Text="No channels configured â€” click Setup"
                 Foreground="#94A3B8" FontSize="14"
                 HorizontalAlignment="Center" VerticalAlignment="Center"
                 IsVisible="{Binding HasTiles, Converter={StaticResource InverseBoolConverter}}" />
    </Grid>

    <!-- Status line -->
    <TextBlock Grid.Row="2" Text="{Binding StatusMessage}" Foreground="#94A3B8" Margin="2,8,2,0"/>
  </Grid>
</UserControl>
