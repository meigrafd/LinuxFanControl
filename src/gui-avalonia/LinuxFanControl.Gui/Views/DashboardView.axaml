<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="clr-namespace:LinuxFanControl.Gui.ViewModels"
             xmlns:c="clr-namespace:LinuxFanControl.Gui.Views.Controls"
             x:Class="LinuxFanControl.Gui.Views.DashboardView">
  <UserControl.DataContext>
    <vm:DashboardViewModel/>
  </UserControl.DataContext>

  <Grid RowDefinitions="Auto,*" Margin="12">
    <TextBlock Text="{Binding Title}" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,8"/>

    <ScrollViewer Grid.Row="1">
      <ItemsControl x:Name="TileBoard" Items="{Binding FanTiles}">
        <ItemsControl.ItemsPanel>
          <ItemsPanelTemplate>
            <WrapPanel />
          </ItemsPanelTemplate>
        </ItemsControl.ItemsPanel>
        <ItemsControl.ItemTemplate>
          <DataTemplate>
            <Border Margin="6">
              <c:FanTile/>
            </Border>
          </DataTemplate>
        </ItemsControl.ItemTemplate>
      </ItemsControl>
    </ScrollViewer>
  </Grid>
</UserControl>
