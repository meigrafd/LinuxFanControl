<UserControl
    x:Class="LinuxFanControl.Gui.Views.DashboardView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:views="clr-namespace:LinuxFanControl.Gui.Views.Controls">
  <ScrollViewer>
    <ItemsControl ItemsSource="{Binding Fans}">
      <ItemsControl.ItemsPanel>
        <ItemsPanelTemplate>
          <WrapPanel ItemWidth="360" ItemHeight="180"/>
        </ItemsPanelTemplate>
      </ItemsControl.ItemsPanel>
      <ItemsControl.ItemTemplate>
        <DataTemplate>
          <views:FanTile/>
        </DataTemplate>
      </ItemsControl.ItemTemplate>
    </ItemsControl>
  </ScrollViewer>
</UserControl>
