<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="LinuxFanControl.Gui.Views.Dialogs.DetectProgressDialog"
        Width="520" Height="260" CanResize="False" Background="{DynamicResource Lfc.WindowBg}" Title="Detection">
  <Grid Margin="16" RowDefinitions="Auto,Auto,*" RowSpacing="12">
    <TextBlock Text="Running detection..." Foreground="{DynamicResource Lfc.TextPrimary}" />
    <ProgressBar IsIndeterminate="True"/>
    <TextBox x:Name="Log" AcceptsReturn="True" IsReadOnly="True" Background="{DynamicResource Lfc.CardBg}" Foreground="{DynamicResource Lfc.TextSecondary}"/>
  </Grid>
</Window>
