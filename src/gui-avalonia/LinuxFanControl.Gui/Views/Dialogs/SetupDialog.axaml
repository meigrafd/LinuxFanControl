<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:LinuxFanControl.Gui.ViewModels.Dialogs"
        x:Class="LinuxFanControl.Gui.Views.Dialogs.SetupDialog"
        Width="520" Height="360"
        CanResize="False"
        Background="{DynamicResource Lfc.WindowBg}"
        Title="Setup">
  <Window.DataContext>
    <vm:SetupDialogViewModel/>
  </Window.DataContext>

  <Grid Margin="16" RowDefinitions="Auto,Auto,*,Auto" RowSpacing="12">
    <TextBlock Text="First run setup" Foreground="{DynamicResource Lfc.TextPrimary}" FontSize="18"/>
    <StackPanel Orientation="Horizontal" Spacing="12">
      <StackPanel Width="220">
        <TextBlock Text="Language" Foreground="{DynamicResource Lfc.TextSecondary}"/>
        <ComboBox ItemsSource="{Binding Languages}" SelectedItem="{Binding SelectedLanguage}"/>
      </StackPanel>
      <StackPanel Width="220">
        <TextBlock Text="Theme" Foreground="{DynamicResource Lfc.TextSecondary}"/>
        <ComboBox ItemsSource="{Binding Themes}" SelectedItem="{Binding SelectedTheme}"/>
      </StackPanel>
    </StackPanel>

    <Border Grid.Row="2" Background="{DynamicResource Lfc.CardBg}" CornerRadius="8" Padding="12">
      <StackPanel>
        <TextBlock Text="Detection" Foreground="{DynamicResource Lfc.TextPrimary}" />
        <TextBlock Text="(Mock) You can run hardware detection later." Foreground="{DynamicResource Lfc.TextSecondary}"/>
      </StackPanel>
    </Border>

    <StackPanel Grid.Row="3" Orientation="Horizontal" Spacing="8" HorizontalAlignment="Right">
      <Button x:Name="BtnCancel" Content="Cancel"/>
      <Button x:Name="BtnApply" Content="Apply" Background="{DynamicResource Lfc.Accent}" Foreground="White"/>
    </StackPanel>
  </Grid>
</Window>
