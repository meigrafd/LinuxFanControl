<Window
    x:Class="LinuxFanControl.Gui.Views.Dialogs.SetupDialog"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Width="560" Height="360" CanResize="False"
    Title="Setup">
  <Grid RowDefinitions="Auto,*,Auto" Margin="16">
    <TextBlock Text="Initial setup" FontSize="18" FontWeight="SemiBold" Margin="0,0,0,12"/>

    <StackPanel Grid.Row="1" Spacing="12">
      <StackPanel Orientation="Horizontal" Spacing="8">
        <TextBlock Text="Theme:" Width="120" VerticalAlignment="Center"/>
        <ComboBox Width="220" ItemsSource="{Binding Themes}" SelectedItem="{Binding SelectedTheme}"/>
      </StackPanel>

      <StackPanel Orientation="Horizontal" Spacing="8">
        <TextBlock Text="Language:" Width="120" VerticalAlignment="Center"/>
        <ComboBox Width="220" ItemsSource="{Binding Languages}" SelectedItem="{Binding SelectedLanguage}"/>
      </StackPanel>

      <Separator/>

      <StackPanel Orientation="Horizontal" Spacing="8">
        <CheckBox Content="Run detection & calibration after closing" IsChecked="{Binding RunDetection}"/>
      </StackPanel>
    </StackPanel>

    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
      <Button Content="Cancel" MinWidth="100" Click="OnCancel"/>
      <Button Content="Apply"  MinWidth="120" Click="OnApply"/>
    </StackPanel>
  </Grid>
</Window>
