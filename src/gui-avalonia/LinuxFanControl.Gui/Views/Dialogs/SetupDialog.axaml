<Window
    x:Class="LinuxFanControl.Gui.Views.Dialogs.SetupDialog"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:viewsControls="clr-namespace:LinuxFanControl.Gui.Views.Controls"
    Width="600" Height="420" CanResize="False"
    Title="{Binding Loc.SetupTitle}">
  <Window.Styles>
    <Style Selector="Button.primary">
      <Setter Property="Background" Value="{DynamicResource AccentBrush}"/>
      <Setter Property="Foreground" Value="{DynamicResource ButtonText}"/>
      <Setter Property="BorderBrush" Value="{DynamicResource AccentBorder}"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="CornerRadius" Value="8"/>
      <Setter Property="Padding" Value="14,8"/>
    </Style>
    <Style Selector="Button.flat">
      <Setter Property="Background" Value="{DynamicResource ButtonBg}"/>
      <Setter Property="Foreground" Value="{DynamicResource ButtonText}"/>
      <Setter Property="BorderBrush" Value="{DynamicResource ButtonBorder}"/>
      <Setter Property="BorderThickness" Value="1"/>
      <Setter Property="CornerRadius" Value="8"/>
      <Setter Property="Padding" Value="12,6"/>
      <Style.Triggers>
        <SelectorTrigger Selector=":pointerover">
          <Setter Property="Background" Value="{DynamicResource ButtonBgHover}"/>
          <Setter Property="Foreground" Value="{DynamicResource Foreground}"/>
        </SelectorTrigger>
      </Style.Triggers>
    </Style>
  </Window.Styles>

  <Grid RowDefinitions="Auto,*,Auto" Margin="18">
    <StackPanel Orientation="Horizontal" Spacing="10">
      <viewsControls:FanLogo />
      <TextBlock Text="{Binding Loc.SetupHeadline}" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
    </StackPanel>

    <StackPanel Grid.Row="1" Spacing="14" Margin="0,10,0,0">
      <StackPanel Orientation="Horizontal" Spacing="10">
        <TextBlock Text="{Binding Loc.Theme}" Width="160" VerticalAlignment="Center"/>
        <ComboBox Width="260" ItemsSource="{Binding Themes}" SelectedItem="{Binding SelectedTheme}"/>
      </StackPanel>

      <StackPanel Orientation="Horizontal" Spacing="10">
        <TextBlock Text="{Binding Loc.Language}" Width="160" VerticalAlignment="Center"/>
        <ComboBox Width="260" ItemsSource="{Binding Languages}" SelectedItem="{Binding SelectedLanguage}"/>
      </StackPanel>

      <StackPanel Orientation="Horizontal" Spacing="10">
        <CheckBox IsChecked="{Binding RunDetection}" Content="{Binding Loc.RunDetection}"/>
      </StackPanel>

      <Separator/>

      <StackPanel Orientation="Horizontal" Spacing="10">
        <Button Classes="flat" Content="{Binding Loc.ImportFanControl}" Command="{Binding ImportCommand}"/>
        <TextBlock Text="{Binding Loc.ImportHint}" VerticalAlignment="Center" Foreground="{DynamicResource SubtleText}"/>
      </StackPanel>
    </StackPanel>

    <StackPanel Grid.Row="2" Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
      <Button Classes="flat" Content="{Binding Loc.Cancel}" Click="OnCancel"/>
      <Button Classes="primary" Content="{Binding Loc.Apply}" Click="OnApply"/>
    </StackPanel>
  </Grid>
</Window>
