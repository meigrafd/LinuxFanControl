<?xml version="1.0" encoding="utf-8"?>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="LinuxFanControl.Gui.Views.Dialogs.SetupDialog"
        Width="680" Height="420"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Title="Setup">
  <Grid RowDefinitions="Auto,*,Auto" Margin="16">
    <TextBlock Text="First-time setup" FontSize="18" Margin="0,0,0,8"/>
    <StackPanel Grid.Row="1" Spacing="12">
      <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
        <TextBlock Text="Language" Width="120" VerticalAlignment="Center"/>
        <ComboBox Width="220"
                  ItemsSource="{Binding Languages}"
                  SelectedItem="{Binding SelectedLanguage}"
                  DisplayMemberPath="Display"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Spacing="12" VerticalAlignment="Center">
          <TextBlock Text="Theme" Width="120" VerticalAlignment="Center"/>
          <ComboBox Width="220"
                    ItemsSource="{Binding Themes}"
                    SelectedItem="{Binding SelectedTheme}"/>
          </StackPanel>

          <Separator/>

          <CheckBox Content="Run detection now" IsChecked="{Binding RunDetection}"/>
          <CheckBox Content="Run calibration after detection" IsChecked="{Binding RunCalibration}"/>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Spacing="8">
          <Button Content="Cancel" MinWidth="100" Command="{Binding CancelCommand}" Name="BtnCancel"/>
          <Button Content="Apply"  MinWidth="120" Command="{Binding ApplyCommand}"  Name="BtnApply"/>
        </StackPanel>
      </Grid>
    </Window>
