<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="LinuxFanControl.Gui.Views.Dialogs.SetupDialog"
        Width="500" Height="300"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        Title="Setup">
  <Grid RowDefinitions="Auto,Auto,*"
        Margin="16">

    <TextBlock Grid.Row="0"
               FontSize="16"
               FontWeight="Bold"
               Text="Initial setup required" />

    <TextBlock Grid.Row="1"
               Margin="0,12,0,0"
               Foreground="{DynamicResource Lfc.TextSecondary}"
               Text="Please configure your fan settings before continuing." />

    <StackPanel Grid.Row="2"
                Margin="0,12,0,0"
                Spacing="8">
      <Button Content="Open Settings"
              Command="{Binding OpenSettingsCommand}" />
      <Button Content="Cancel"
              Command="{Binding CancelCommand}" />
    </StackPanel>
  </Grid>
</Window>
